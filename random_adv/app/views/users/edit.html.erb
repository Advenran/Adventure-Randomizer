		<div class="col-md-6">
			<div class="big">
				<div class="main">
					<h1 id="tag-line">Edit your account, <%= @current_user.name %></h1>
					<div class="login-form">
						<%= form_for @user do |f| %>
						<div class="form-group">
							Enter your email
							<%= f.text_field :email, class: "form-control"%> <br>
						</div>
						<div class="form-group">
							Enter your name
							<%= f.text_field :name, class: "form-control"%> <br>
						</div>
						<div class="form-group">
							Enter your password
							<%= f.password_field :password, class: "form-control"%> <br>
						</div>
							<%= f.submit "Update account", class: "btn btn-default"%>
						<% end %>
						<input type="button" class="btn btn-default" value="Cancel" onclick="history.back(-1)" />
					</div>
				</div>
			</div>
			<div class="col-md-3">
